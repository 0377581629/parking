@using Zero.Authorization
@using Zero.Web.Areas.App.Startup
@model Zero.Web.Areas.App.Models.DashboardWidget.DashboardWidgetViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Host.DashboardWidget;
}
@section Scripts
{
    <script abp-src="@ZeroConst.ScriptPathApp/Views/DashboardWidget/Index.js" asp-append-version="true"></script>
}
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <abp-page-subheader title="@L("DashboardWidgets")" description="@L("DashboardWidgetsHeaderInfo")">
        @if (IsGranted(AppPermissions.DashboardWidget_Create))
        {
            <button id="CreateNewButton" class="btn btn-primary blue">
                <i class="fa fa-plus"></i> @L("Create")
            </button>
        }
    </abp-page-subheader>
    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div id="DashboardWidgetsFormFilter">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input id="DashboardWidgetTableFilter" class="form-control" type="text" value="@ViewBag.FilterText" placeholder="@L("SearchWithThreeDot")" aria-describedby="basic-addon2">
                                        <span class="input-group-btn">
                                            <button name="RefreshButton" class="btn btn-primary">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                    
                <div class="align-items-center">
                    <p class="text-danger text-bold">@L("DashboardWidgetWarning")</p>
                    <table id="DashboardWidgetsTable" class="display table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="text-center"></th>
                            <th class="text-center">Name</th>
                            <th class="text-center">Description</th>
                            <th class="text-center">Config</th>
                            <th class="text-center">Demension</th>
                            <th class="text-center">Default</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>