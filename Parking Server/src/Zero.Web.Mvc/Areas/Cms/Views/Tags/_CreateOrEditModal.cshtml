@using DPS.Cms.Core.Shared
@model Zero.Web.Areas.Cms.Models.Tags.CreateOrEditTagsModalViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? L("Edit") : L("Create")))

<div class="modal-body">
    <div id="TagsInformationsTab">
        <form name="TagsInformationsForm" role="form" novalidate class="form-validation">
            @if (Model.IsEditMode)
            {
                <input type="hidden" name="id" value="@Model.Tags.Id"/>
            }
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <label>
                            @L("Code") <span class="text-danger">*</span>
                        </label>
                        <input class="form-control" id="Tags_Code" value="@Model.Tags.Code" type="text" name="code" required maxlength="@ZeroConst.MaxNameLength" minlength="@ZeroConst.MinNameLength"/>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label>
                            @L("Name") <span class="text-danger">*</span>
                        </label>
                        <input class="form-control" id="Tags_Name" value="@Model.Tags.Name" type="text" name="name" required maxlength="@ZeroConst.MaxNameLength" minlength="@ZeroConst.MinNameLength"/>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group text-center mb-0">
                        <label>@L("IsActive")</label>
                        <div class="form-control no-border">
                            <label class="checkbox checkbox-outline checkbox-primary inline-block">
                                <input type="checkbox" id="Tags_IsActive" name="isActive" value="true" @Html.Raw(!Model.Tags.IsActive ? "" : "checked=\"checked\"")>
                                <span></span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label>
                            @L("Note")
                        </label>
                        <input class="form-control" id="Tags_Note" value="@Model.Tags.Note" type="text" name="note"/>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")