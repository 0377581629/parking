@using Zero.Identity
@using Zero.Web.Security.Recaptcha
@using Zero.Web.Resources
@using Zero.Web.Session
@addTagHelper *, Owl.reCAPTCHA
@model Zero.Web.Models.Account.LoginFormViewModel
@inject SignInManager SignInManager
@inject IPerRequestSessionCache SessionCache
@inject IWebResourceManager WebResourceManager

<div class="page-content pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                <div class="row">
                    <div class="col-lg-6 pr-30 d-none d-lg-block">
                        <img class="border-radius-15" src="/Ecommerce/imgs/page/login-1.png" alt="">
                    </div>
                    <div class="col-lg-6 col-md-8">
                        <div class="login_wrap widget-taber-content background-white">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h1 class="mb-5">@L("Login")</h1>
                                </div>
                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <div class="alert alert-danger">
                                        <div class="alert-text">@ViewBag.ErrorMessage</div>
                                    </div>
                                }
                                <form class="login-form" asp-action="Login" asp-controller="Account" method="post">
                                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl"/>
                                    <input type="hidden" name="returnUrlHash"/>
                                    <input type="hidden" name="ss" value="@ViewBag.SingleSignIn"/>
                                    <input type="hidden" name="fromFrontPage" value="true"/>
                                    @if (ViewBag.UseCaptcha)
                                    {
                                        <input type="hidden" name="@RecaptchaValidator.RecaptchaResponseKey" id="recaptchaResponse"/>
                                    }
                                    <div class="form-group px-0">
                                        <input class="form-control" type="text" placeholder="@L("UserNameOrEmail")" name="usernameOrEmailAddress">
                                    </div>
                                    <div class="form-group form-forgot px-0">
                                        <input class="form-control" type="password" placeholder="@L("Password")" name="password">
                                    </div>

                                    <div class="login_footer form-group mb-50">
                                        <div class="chek-form">
                                            <div class="custome-checkbox">
                                                <input class="form-check-input" type="checkbox" id="remember-me" name="rememberMe" value="false">
                                                <label class="form-check-label" for="remember-me">
                                                    <span>@L("RememberMe")</span>
                                                </label>
                                            </div>
                                        </div>
                                        <a class="text-muted" href="@Url.Action("ForgotPassword", "Account")">@L("ForgotPassword")</a>
                                    </div>
                                    <div class="form-group">
                                        <button type="button" class="btn btn-heading btn-block hover-up" id="kt_login_signin_submit">@L("LogIn")</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>