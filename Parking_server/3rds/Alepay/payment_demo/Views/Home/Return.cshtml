@model payment_demo.Models.AlePayReturnModel

@{
    ViewData["Title"] = "Kết quả giao dịch";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="text-center text-uppercase">@Html.Raw(Model.Code == 0 ? "Thanh toán thành công" : "Thanh toán thất bại")</h3>
    </div>
    <div class="col-lg-12 text-center mt-5">
        @if (Model.Code != 0)
        {
            <p class="error-code">Mã lỗi: @Model.Code</p>
            <p class="error-message">Nội dung lỗi: @Html.Raw(Model.Message)</p>
            @if (Model.UserCancelled)
            {
                <p class="user-cancelled">Bạn đã huỷ giao dịch thanh toán</p>
            }
        }
        else
        {
            <p class="success-message">Thanh toán thành công!</p>
        }
        <p class="transaction-code">Mã giao dịch: @Model.TransactionCode</p>

    </div>
</div>