@{
    ViewData["Title"] = "Thanh toán";
}

<form>
    <div class="row">
        <div class="col-lg-12">
            <h3>Đơn hàng</h3>
        </div>
        <div class="col-lg-6" id="paymentInfo">
            <div class="form-group">
                <label for="customMerchantId">Mã khách hàng</label>
                <input type="text" class="form-control use-fu" name="customMerchantId" id="customMerchantId" value="KH0001" />
            </div>
            <div class="form-group">
                <label for="buyerName">Tên khách hàng</label>
                <input type="text" class="form-control use-fu" name="buyerName" id="buyerName" value="Phùng Tiến Triều" />
            </div>
            <div class="form-group">
                <label for="buyerEmail">Email khách hàng</label>
                <input type="email" class="form-control use-fu" name="buyerEmail" id="buyerEmail" value="phungtientrieu@gmail.com" />
            </div>
            <div class="form-group">
                <label for="buyerPhone">Điện thoại</label>
                <input type="tel" class="form-control use-fu" name="buyerPhone" id="buyerPhone" value="0962858393" />
            </div>
            <div class="form-group">
                <label for="buyerAddress">Địa chỉ</label>
                <input type="text" class="form-control use-fu" name="buyerAddress" id="buyerAddress" value="185 Giảng Võ, Cát Linh, Đống Đa" />
            </div>
            <div class="form-group">
                <label for="buyerCity">Thành phố</label>
                <input type="text" class="form-control use-fu" name="buyerCity" id="buyerCity" value="Hà Nội" />
            </div>
            <div class="form-group">
                <label for="buyerCountry">Quốc gia</label>
                <input type="text" class="form-control use-fu" name="buyerCountry" id="buyerCountry" value="Việt Nam" />
            </div>
        </div>
        <div class="col-lg-6" id="orderInfo">
            <div class="form-group">
                <label for="orderCode">Mã đơn hàng</label>
                <input type="text" class="form-control use-fu" name="orderCode" id="orderCode" value="DH111" />
            </div>
            <div class="form-group">
                <label for="totalItem">Số món đồ</label>
                <input type="number" class="form-control use-fu" name="totalItem" id="totalItem" value="1" />
            </div>
            <div class="form-group">
                <label for="orderDescription">Mô tả</label>
                <input type="text" class="form-control use-fu" name="orderDescription" id="orderDescription" value="Mô tả đơn hàng mẫu" />
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="amount">Giá trị</label>
                        <input type="number" class="form-control use-fu" name="amount" id="amount" value="1000000" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="currency">Tiền tệ</label>
                        <input type="text" class="form-control use-fu" name="currency" id="currency" value="VND" />
                    </div>
                </div>
            </div>


        </div>

        <div class="col-lg-12 mt-3" style="display: none;">
            <h3>Thanh toán</h3>
        </div>
        <div class="col-lg-12" id="areaPaymentMethods" style="display: none;">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMethod" id="pmInstant" value="" />
                <label class="form-check-label" for="pmInstantPayment">
                    Thanh toán thường
                </label>

            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMethod" id="pmInstallment" value="" />
                <label class="form-check-label" for="pmInstallment">
                    Trả góp
                </label>
            </div>
            <div class="row" id="installmentOptions" style="display: none;">
                <div class="col-lg-12" id="banks">
                    <image src="/images/bank-logos/ACB.jpg" class="img-rounded shadow" style="max-width: 120px; margin-right: 10px;"></image>
                    <image src="/images/bank-logos/ACB.jpg" class="img-rounded shadow border border-primary rounded" style="max-width: 120px; margin-right: 10px;"></image>
                </div>
            </div>
        </div>

        <div class="col-lg-12 mt-3" id="paymentRedirectInfo" style="display: none;">
            <h3>Thông tin giao dịch</h3>
            <p>(Trên thực tế những thông tin dưới đây không được hiển thị, mà khách hàng sẽ được redirect ngay đến trang thanh toán)</p>
            Mã giao dịch: <span id="transactionCode"></span> <br />
            Link thanh toán: <a href="/" id="paymentLink" target="_blank"></a>
        </div>

        <div class="col-lg-12 mt-3">
            <button class="btn btn-primary" id="pay">Thanh toán</button>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/js/pay.js" asp-append-version="true"></script>
}